<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_white_24dp</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowExitTransition">@transition/main_exit</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="MyPreferenceTheme" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="android:background">#9E9E9E</item>
    </style>

    <!--a style that shows a Sunshine logo instead of a title -->
    <!-- forecast activity action bar styles -->
    <style name="ActionBar.Solid.Sunshine.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:typeface">monospace</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:gravity">center</item>
    </style>

    <!--style for MainActivity called AppTheme.Forecast that uses our custom ActionBar style -->
    <style name="AppTheme.Forecast" parent="@style/AppTheme">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <!--Create the DetailLabel style -->
    <!-- Style used in the DetailActivity for the labels of the extra weather information -->
    <style name="DetailLabel" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="DetailSmall" parent="MaterialTypography.Regular.Body1">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DetailLarge" parent="MaterialTypography.Tall.Headline">
        <item name="android:textColor">@color/white</item>
    </style>

    <!--Create the ExtraWeatherMeasurement style -->
    <!-- Style used in the DetailActivity for the values of the extra weather information -->
    <style name="ExtraWeatherMeasurement" parent="@style/TextAppearance.AppCompat.Headline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--DRAWER-->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="DrawerText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/drawer_text_layout_height</item>
        <item name="android:padding">@dimen/drawer_item_padding</item>
        <item name="android:drawablePadding">@dimen/drawer_text_drawable_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/drawer_touch_selector</item>
        <!--<item name="android:layout_marginTop">@dimen/drawer_text_margin_top_bottom</item>-->
        <!--<item name="android:layout_marginLeft">@dimen/drawer_text_margin_left</item>-->
        <!--<item name="android:layout_marginBottom">@dimen/drawer_text_margin_top_bottom</item>-->
        <item name="android:textSize">@dimen/drawer_text_size</item>
        <!--this can be edited using fonts probably-->
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="DrawerIcon">
        <item name="android:padding">@dimen/drawer_item_padding</item>
        <item name="android:layout_width">@dimen/drawer_icon_width</item>
        <item name="android:layout_height">@dimen/drawer_icon_height</item>
    </style>

    <!--MAIN ACTIVITY-->
    <!--for texts in card views:-->
    <style name="CardSmall" parent="@style/MaterialTypography.Regular.Subheading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">italic</item>
        <item name="android:shadowColor">@color/material_color_black_87_percent</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="CardMedium" parent="MaterialTypography.Regular.Headline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/material_color_black_87_percent</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="WidgetMedium" parent="MaterialTypography.Regular.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WidgetSmall" parent="MaterialTypography.Regular.Subheading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AboutText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/about_touch_selector</item>
        <item name="android:textSize">@dimen/drawer_text_size</item>
        <!--this can be edited using fonts probably-->
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>
