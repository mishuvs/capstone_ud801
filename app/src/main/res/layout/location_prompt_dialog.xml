<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="275dp"
    android:layout_height="match_parent"
    android:background="@color/dialog"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/set_location_dialog_title"
        android:textSize="32sp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-thin"
        />

    <Button
        android:id="@+id/useGpsDialogButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="@color/location_dialog_button"
        android:padding="16dp"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:text="@string/use_gps_location_title"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="OR"
        android:textSize="16sp"
        android:textStyle="italic"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"/>

    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:text="@string/city_location_field_label"-->
        <!--android:textSize="24sp"-->
        <!--android:textStyle="bold"-->
        <!--android:layout_marginTop="16dp"-->
        <!--android:textColor="@color/white"/>-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/place_autocomplete_fragment"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        />

</LinearLayout>
